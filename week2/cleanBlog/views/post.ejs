<%- include("partials/_header") -%>

<body>

  <%- include("partials/_navigator") -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#">Emre PALA</a>
              <%= new Date(post.dateCreated).toLocaleDateString() %></p> </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
        </div>
      </div>
    </div>
  </article>
<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Share box -->
      <div class="tm-bg-gray tm-share-box">
        <div class="text-center">
          <a href="/edit-post/<%= post._id %>" class="btn btn-primary p-2 mr-2 mb-4 tm-btn-animate tm-btn-download tm-icon-download rounded-pill"><span>Update Details</span></a>	
        </div>	
        <div class="text-center">
          <a href="/edit-post/<%= post._id %>?_method=DELETE" class="btn btn-danger p-2 mb-4 tm-btn-animate tm-btn-download tm-icon-download rounded-pill" onclick="return confirm('ARE YOU SURE?')"><span>Delete Photo</span></a>	
        </div>								
      </div>
    </div>
  </div>
</div>
  <hr>

  <%- include("partials/_footer") -%>

</body>

</html>
