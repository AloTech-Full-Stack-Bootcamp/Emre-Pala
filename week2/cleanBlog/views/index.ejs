<%- include("partials/_header") -%>
<body>

  <%- include("partials/_navigator") -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Clean Blog</h1>
            <span class="subheading">Developed By Emre PALA</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% for (let i = 0; i<posts.length ; i++) { %>
        <div class="post-preview">
          <a href="/post/<%= posts[i]._id %>">
            <h2 class="post-title">
              <%= posts[i].title %>
            </h2>
          </a>
          <a href="/post/<%= posts[i]._id %>">
            <p class="post-title">
              <%= posts[i].detail %>
            </p>
          </a>
          <!-- TO-DO show some content about the post but not all of them!! -->
          <p class="post-meta">Posted by
            <a href="#">Emre Pala</a>
            <%= new Date(posts[i].dateCreated).toLocaleDateString() %></p> 
        </div>
        <hr>
        <% } %>
        
     
        <!-- Pager -->
        <div class="clearfix">
          <% if (pages > 0) { %>
            <ul class="nav tm-paging-links">
              <% for (i=1; i <=pages; i++) { %>
                <%   if (i == current) { %>
                  <li class="nav-item active"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                <% } else if (i < pages) { %>
                  <li class="nav-item"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                <%  } else { %>
                  <li class="nav-item"><a href="/?page=<%= i %>" class="nav-link tm-paging-link"><%= i %></a></li>
                <%  } %>
              <%  } %>
            </ul>
          <% } %> 
        </div>
        <!-- <a class="btn btn-primary float-right" href="/?all=0">Older Posts &rarr;</a> -->
      </div>
    </div>
  </div>

  <hr>

  <%- include("partials/_footer") -%>
  

</body>

</html>
